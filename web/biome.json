{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*.{js,jsx,ts,tsx,json,css,scss,md,mdx,html}"]
	},
	"formatter": {
		"enabled": true,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,

		"rules": {
			"recommended": true,
			"correctness": {
				"useUniqueElementIds": "off",
				"useParseIntRadix": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
